<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18bbce"
    tools:context="com.albaincompaniesltd.app.phpsignup.MainActivity">

    <EditText
        android:id="@+id/edtusername"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Enter username"
        android:textColorHint="#ccc"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtemail"
        android:layout_width="350dp"
        android:hint="Enter email"
        android:textColorHint="#ccc"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtusername"
        android:layout_below="@+id/edtusername"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edtpassword"
        android:hint="Enter Password"
        android:textColorHint="#ccc"
        android:textColor="#fff"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtemail"
        android:layout_below="@+id/edtemail"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtpassword"
        android:layout_below="@+id/edtpassword"
        android:layout_marginTop="28dp"
        android:background="#2774b3"
        android:text="Sign Up"
        android:textColor="#FFF" />

</RelativeLayout>
